{
   "name": "minimakerfaire",
   "description": "WordPress Theme for Global MakerFaire",
   "author": "Maker Media",
   "version": "5.13.16",
   "private": true,
   "repository": {
      "type": "git",
      "url": "git@github.com:Make-Magazine/Global-Maker-Faire.git"
   },
   "license": "UNLICENSED",
   "scripts": {
      "cachebust:update": "npm version patch",
      "postcachebust:update": "npm run replace:version",
      "replace:version": "replace-in-file '/Version\\: [0-9]\\.{0,1}[0-9]*\\.{0,1}[0-9]*/' 'Version: '\"$npm_package_version\" style.css --isRegex",
      "less:gmf:compile": "lessc --source-map-less-inline --source-map-map-inline --line-numbers=comments less/style.less css/style.css",
      "less:admin-gmf:compile": "lessc --source-map-less-inline --source-map-map-inline --line-numbers=comments less/admin-style.less css/admin-style.css",
      "postless:gmf:compile": "npm run less:gmf:minify",
      "postless:admin-gmf:compile": "npm run less:admin-gmf:minify",
      "less:gmf:minify": "cleancss -o css/style.min.css css/style.css --source-map",
      "less:admin-gmf:minify": "cleancss -o css/admin-style.min.css css/admin-style.css --source-map",
      "postless:gmf:minify": "rm css/style.css",
      "postless:admin-gmf:minify": "rm css/admin-style.css",
      "js:gmf:uglify": "uglifyjs js/scripts/owl.carousel.min.js js/scripts/scripts.js -o js/scripts/min/scripts.min.js -c -m --source-map \"root='../../../', url='scripts.min.js.map'\"",
      "js:ng:uglify": "uglifyjs node_modules/angular/angular.js node_modules/angular-filter/dist/angular-filter.js node_modules/angular-ui-bootstrap/dist/ui-bootstrap-tpls.js node_modules/angular-utils-pagination/dirPagination.js node_modules/angular-animate/angular-animate.js -o js/built-angular-libs.min.js --source-map \"root='../', url='built-angular-libs.min.js.map'\"",
      "onchange:less:gmf": "onchange 'less/*.less' -- npm run less:gmf:compile",
      "onchange:less:admin-gmf": "onchange 'less/*.less' -- npm run less:admin-gmf:compile",
      "onchange:js:gmf": "onchange 'js/scripts/*.js' -- npm run js:gmf:uglify",
      "onchange:js:ng": "onchange 'node_modules/angular/*.js' -- npm run js:ng:uglify",
      "build": "npm-run-all js:**:uglify less:**:compile",
      "build:cachebust": "npm-run-all cachebust:update js:**:uglify less:**:compile",
      "dev": "npm-run-all build -p onchange:js:** onchange:less:**"
   },
   "devDependencies": {
      "bootstrap": "^3.3.4",
      "bootstrap-dialog": "^1.34.6",
      "clean-css-cli": "^4.2.1",
      "fancybox": "^3.0.0",
      "jquery": "^3.2.1",
      "jquery.cookie": "^1.4.1",
      "less": "^3.9.0",
      "npm-run-all": "^4.1.5",
      "onchange": "^5.2.0",
      "replace-in-file": "^3.4.2",
      "uglify-js": "^3.4.9"
   },
   "dependencies": {
      "angular": "^1.6.4",
      "angular-animate": "^1.6.4",
      "angular-filter": "^0.5.16",
      "angular-ui-bootstrap": "^2.5.0",
      "angular-utils-pagination": "^0.11.1",
      "hammerjs": "^2.0.8"
   }
}
